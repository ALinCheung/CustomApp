<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jmui_menu_title_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/jmui_jpush_blue">

    <ImageButton
        android:id="@+id/chat_header_return"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="match_parent"
        android:background="@drawable/jmui_back_btn_bg"
        android:src="@drawable/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/chat_header_return"
        android:layout_toLeftOf="@id/jmui_right_btn"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chat_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="190dp"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/jmui_group_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/jmui_right_btn"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:background="@drawable/jmui_back_btn_bg"
        android:src="@drawable/jmui_chat_detail" />
</RelativeLayout>